<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="16dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorYellow"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/colorYellowDark"
                android:endColor="@color/colorYellowDark" />
        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="16dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorYellow" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorYellow"
                android:endColor="@color/colorYellow" />
        </shape>
    </item>
</selector>