<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="16dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorBlue"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBlueDark"
                android:endColor="@color/colorBlueDark" />
        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="16dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorBlue" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBlue"
                android:endColor="@color/colorBlue" />
        </shape>
    </item>
</selector>