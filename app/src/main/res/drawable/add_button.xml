<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="8dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorGray"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/colorGrayAgate"
                android:endColor="@color/colorGrayAgate" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="8dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorGrayAgate" />
            <solid
                android:color="@color/colorGrayAgate" />
        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="8dp" />
            <stroke
                android:width="1dip"
                android:color="@color/colorGray" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorGray"
                android:endColor="@color/colorGray"/>
        </shape>
    </item>
</selector>